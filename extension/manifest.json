{
  "manifest_version": 2,

  "name": "first-crm-base",
  "description": "first crm base",
  "version": "1.0",

  "background": {
    "scripts": [
      "content.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_title": ""
  },

  "content_scripts": [
    {
      "matches": ["http://*/"],
      "js": ["content.js"]
    }
  ],

  "permissions": [
    "activeTab"
  ]
}
